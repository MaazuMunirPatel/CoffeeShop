<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<LinearLayout
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FEDBD0">



	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">




	<TextView
		style="@style/HeaderTextStyle"
		android:layout_marginLeft="100dp"
		android:background="#25F9AA33"
		android:fontFamily="sans-serif-light"
		android:text="THE COFFEE SHOP"
		android:textColor="#442C2E"
		android:textStyle="bold" />

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="220dp"
		android:scaleType="centerCrop"
		android:src="@drawable/coffee" />
   </LinearLayout>

	<EditText
		android:id="@+id/name_description_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Name"
		android:textColorHint="@color/black"
		android:inputType="textCapWords"
		android:textColor="@color/black"/>
	<EditText
		android:id="@+id/phone_description_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Phone Number"
		android:textColorHint="@color/black"
		android:inputType="phone"
		android:textColor="@color/black"/>


	<TextView
		style="@style/HeaderTextStyle"
		android:text="quantity"
		android:textAllCaps="true"
		android:layout_marginLeft="4dp"
		android:layout_marginBottom="17dp"
		android:layout_marginTop="5dp"
		android:textStyle="bold"
		android:textColor="@color/black" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:text="-"
			android:layout_marginLeft="4dp"
			android:onClick="decrement" />


		<TextView
			android:id="@+id/quantity_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="2"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:textAllCaps="true"
			android:textSize="20sp"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:textStyle="bold"
			android:textColor="#000000" />

		<Button
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:text="+"
			android:layout_marginLeft="4dp"
			android:onClick="increment" />
	</LinearLayout>
	<TextView
		style="@style/HeaderTextStyle"
		android:text="Toppings"
		android:layout_marginLeft="10sp"
		android:layout_marginTop="5sp"
		android:paddingTop="5sp"
		android:textColor="@color/black"/>
	<CheckBox
	android:id="@+id/whipped_cream_checkbox"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="whipped Cream"
		android:textColor="@color/black"/>
	<CheckBox
		android:id="@+id/choclate_cream_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		android:text="Choclate Cream"/>


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="4dp"
		android:text="Ordersummary"
		android:textColor="#000000"
		android:textStyle="bold"
		android:textSize="16sp" />

	<TextView
		android:id="@+id/order_summary_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="4dp"
		android:text="$0"
		android:textStyle="bold"
		android:textColor="#000000"
		android:textSize="16sp" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">



	<Button
		android:id="@+id/order"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginLeft="4dp"
		android:textStyle="bold"
		android:text="  confirm Order"
		android:onClick="submitOrder" />

		<Button
			android:id="@+id/placeorder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="135dp"
			android:layout_marginTop="16dp"
			android:layout_toRightOf="@id/order"
			android:text="  place Order"
			android:textStyle="bold" />


	</RelativeLayout>






</LinearLayout>
</ScrollView>
